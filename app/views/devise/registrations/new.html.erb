<h2>Sign up</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone %><br />
    <%= form.text_field :phone %>
  </div>

  <div class="form-group">
    <%= form.label :address %><br />
    <%= form.text_field :address %>
  </div>

  <div class="form-group">
    <%= form.label :notes %><br />
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
