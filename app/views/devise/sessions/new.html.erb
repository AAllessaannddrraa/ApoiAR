<h2>Log in</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.check_box :remember_me %>
    <%= form.label :remember_me %>
  </div>

  <div class="actions">
    <%= form.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
