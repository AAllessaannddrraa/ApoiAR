<div class="card mx-auto shadow" style="max-width: 500px; border-radius: 15px;">
  <div class="card-header text-white text-center" style="background-color: #4a90e2; border-radius: 15px 15px 0 0;">
    <h2 class="fw-bold mb-0">Log in</h2>
  </div>
  <div class="card-body p-4">
    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= form.label :email, "Email Address", class: "form-label fw-bold" %>
        <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :password, "Password", class: "form-label fw-bold" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-check mb-3">
        <%= form.check_box :remember_me, class: "form-check-input" %>
        <%= form.label :remember_me, "Remember me", class: "form-check-label" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
