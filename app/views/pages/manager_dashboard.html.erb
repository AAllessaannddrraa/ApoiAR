<!-- app/views/pages/manager_dashboard.html.erb -->
<h1>Manager Dashboard</h1>

<h1>Supports</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @supports.each do |support| %>
      <tr>
        <td><%= support.name %></td>
        <td><%= support.description %></td>
        <td><%= link_to 'Show', manager_support_support_path(support) %></td>
        <td><%= link_to 'Edit', edit_support_path(support) %></td>
        <td><%= link_to 'Destroy', support, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Support', new_support_path %>

<h1>Caregivers</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @caregivers.each do |caregiver| %>
      <tr>
        <td><%= caregiver.name %></td>
        <td><%= caregiver.email %></td>
        <td><%= caregiver.phone %></td>
        <td><%= link_to 'Show', manager_caregiver_caregiver_path(caregiver) %></td>
        <td><%= link_to 'Edit', edit_caregiver_path(caregiver) %></td>
        <td><%= link_to 'Destroy', caregiver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Caregiver', new_caregiver_path %>
