<h1><%= @support.name %></h1>
<p><%= @support.description %></p>
<%= link_to 'Edit', edit_support_path(@support) %>
<%= link_to 'Back', manager_supports_path %>

<h2>Assign Caregiver</h2>
<%= form_with(url: assign_caregiver_support_path(@support), method: :post, local: true) do |form| %>
  <div>
    <%= form.label :caregiver_id, 'Select Caregiver' %>
    <%= form.collection_select :caregiver_id, @caregivers, :id, :name %>
  </div>
  <div>
    <%= form.submit 'Assign Caregiver', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
