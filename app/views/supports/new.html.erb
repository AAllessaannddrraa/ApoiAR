<div class="container my-5">
  <h1 class="text-center text-primary mb-4">New Support</h1>
  <div class="card shadow-lg mx-auto" style="max-width: 800px; border-radius: 15px;">
    <div class="card-header text-white text-center" style="background-color: #4a90e2;">
      <h2 class="mb-0">Support Details</h2>
    </div>
    <div class="card-body">
      <%= render 'form', support: @support %>
    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to 'Back', supports_path, class: 'btn btn-secondary' %>
  </div>
</div>
