<!-- app/views/supports/manager_index.html.erb -->
<h1>Manager Supports</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @supports.each do |support| %>
      <tr>
        <td><%= support.name %></td>
        <td><%= support.description %></td>
        <td><%= link_to 'Show', manager_support_path(support) %></td>
        <td><%= link_to 'Edit', edit_support_path(support) %></td>
        <td><%= link_to 'Destroy', support, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Support', new_support_path %>
<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
